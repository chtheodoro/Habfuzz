all: test_waver clean

vpath %.f95 ../habfuzz

FCOM=gfortran
SOURCES=test_waver_driver.f95 waver.f95
MODSRCS=fdeclarations.f95 fruit.f95 test_waver.f95
EXE=test_waver
OBJS=$(SOURCES:.f95=.o)
MODS=$(MODSRCS:.f95=.o)
FFLAGS=-c

$(EXE):$(MODS) $(OBJS)
	$(FCOM) -o $@ $^

$(MODS):$(MODSRCS)
	$(FCOM) $(FFLAGS) $^

$(OBJS):$(SOURCES)
	$(FCOM) $(FFLAGS) $^
	
clean:
	-del -f *.o *.mod
