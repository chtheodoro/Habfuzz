all: test_centroid clean

vpath %.f95 ../habfuzz

FCOM=gfortran
SOURCES=test_centroid_driver.f95 centroid.f95
MODSRCS=fdeclarations.f95 fruit.f95 test_centroid.f95
EXE=test_centroid
OBJS=$(SOURCES:.f95=.o)
MODS=$(MODSRCS:.f95=.o)
FFLAGS=-c

$(EXE):$(MODS) $(OBJS)
	$(FCOM) -o $@ $^

$(MODS):$(MODSRCS)
	$(FCOM) $(FFLAGS) $^

$(OBJS):$(SOURCES)
	$(FCOM) $(FFLAGS) $^
	
clean:
	-@rm -f *.o *.mod null 2> ../tests/null || echo > ../tests/null
	-@del -f *.o *.mod null 2> ../tests/null || echo > ../tests/null

	./test_centroid
